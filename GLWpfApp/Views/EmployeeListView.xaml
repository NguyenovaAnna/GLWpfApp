<Window x:Class="GLWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GLWpfApp"
        xmlns:vm="clr-namespace:GLWpfApp.ViewModels"
        mc:Ignorable="d"
        Title="Employees" Height="450" Width="800">

    <Window.Resources>
        <vm:EmployeeListViewModel x:Key="EmployeeListViewModel" />

    </Window.Resources>
    
    <Border Padding="10">
        <Grid DataContext="{Binding Source={StaticResource EmployeeListViewModel}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Border BorderBrush="Gray" 
                        BorderThickness="0.5" 
                        Padding="5">
                    <StackPanel>
                        <Border BorderBrush="Black" 
                                BorderThickness="0.5"
                                Margin="0,5,0,10"
                                Padding="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBox Grid.Row="0"
                                         VerticalAlignment="Stretch"  
                                         HorizontalAlignment="Stretch"
                                         Margin="2,0,0,0"
                                         Padding="2"
                                         BorderThickness="0"
                                         Height="20"
                                         FontSize="12"
                                         Text="{Binding EmployeesFilter, UpdateSourceTrigger=PropertyChanged}"/>

                                <Button Grid.Row="0"
                                        Content="Search"
                                        HorizontalAlignment="Right" 
                                        Margin="0,0,2,0" Height="20" 
                                        Width="Auto" />
                            </Grid>
                        </Border>
                        
                        <ListView x:Name="ListOfEmployees" 
                                  ItemsSource="{Binding Employees}" 
                                  SelectedItem="{Binding SelectedEmployees}"
                                  Margin="2" 
                                  Background="Transparent" 
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FullName}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
